<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="RepoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Repo.model.ProjectDiscussionComment</class>
    <class>Repo.model.ProjectMaster</class>
    <class>Repo.model.ProjectDetail</class>
    <class>Repo.model.ProjectPhase</class>
    <class>Repo.model.ProjectInvitation</class>
    <class>Repo.model.UserMaster</class>
    <class>Repo.model.ProjectTask</class>
    <class>Repo.model.PorjectBugTrack</class>
    <class>Repo.model.ProjectTaskDetail</class>
    <class>Repo.model.ProjectFollower</class>
    <class>Repo.model.ProjectTaskMember</class>
    <class>Repo.model.ProjectDiscussion</class>
    <class>Repo.model.UserLog</class>
    <class>Repo.model.ProjectBugTrackComment</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/repo?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="12345"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
